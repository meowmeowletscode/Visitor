@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, Visitor.</h1>    
</div>

<h2>Visitor CheckIn</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label name-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.visitorInfo.Name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">IC No</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="icno" value="@Model.visitorInfo.ICNo">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone No</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phoneno" value="@Model.visitorInfo.PhoneNo">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Company</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="company" value="@Model.visitorInfo.Company">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Number Of Person</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="numofperson" value="@Model.visitorInfo.NumOfPerson">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Purpose</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="purpose" value="@Model.visitorInfo.Purpose">
        </div>
    </div>

    <!--show the visitor number-->
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage The visitor number no is @Model.ID.</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary submit-btn">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary cancel-btn" href="/" role="button">Cancel</a>
        </div>
    </div>

</form>
